<div class="col-md-12">
  <h2 class="text-center">我发表过的文章</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Content</th>
        <th>Group Name</th>
        <th>Last Update</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
         <tr>
           <th><%= post.content%></th>
           <th><%= post.group.title %></th>
           <th><%= post.updated_at %></th>
           <th><%= link_to("Edit",edit_account_post_path(post), class: "btn btn-default btn-xs") %></th>
           <th><%= link_to("Delete",account_post_path(post), method: :delete, data: { confirm: "Are you sure?" },class: "btn btn-default btn-xs")%></th>
         </tr>
      <% end %>
    </tbody>
  </table>
</div>
